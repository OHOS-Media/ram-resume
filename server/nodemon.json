{
  "watch": [
    "*.js",
    "routes/",
    "models/",
    "middleware/",
    "config/",
    "utils/"
  ],
  "ignore": [
    "node_modules/",
    ".git/",
    "dist/",
    "coverage/",
    "*.test.js",
    "*.spec.js"
  ],
  "ext": "js,json,env",
  "verbose": true,
  "delay": "500",
  "env": {
    "NODE_ENV": "development"
  }
} 